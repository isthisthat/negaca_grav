
<!-- panels - {{ page.menu }} -->
<div id="{{ page.menu }}" class="pad-section">
	<div class="container">
    	<h2>{{ page.title }}</h2>
    	<br>
		<div class="row">
			{% for column in page.content|split('<hr />') %}
			    <div class="col-sm-4">
			    	<div class="panel panel-default">
			    		<div class="panel-heading">
			    			<h3 class="panel-title">Panel title</h3>
			    		</div>
			    		<div class="panel-body">
        					{{ column }}
						</div>
					</div>
				</div>
        	{% endfor %}
    	</div>
    </div>
</div>
<!-- /{{ page.menu }} panels -->
